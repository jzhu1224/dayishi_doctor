<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.jkdys.doctor.widget.MyToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@color/color_white"
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_prpfile"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/img_doctor"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="张亮"
                        android:textColor="#FF0A1D3D"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/tv_state"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/bg_tag_processing"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待处理"
                        android:textColor="#FFFF5A5A"
                        android:textSize="10sp"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_vip"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tag_vip"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/color_0A1D3D"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="200.0"
                        android:textColor="#FF0A1D3D"
                        android:textSize="24sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_gender_age"
                    android:layout_below="@id/ll_prpfile"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/color_ADB5C1"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="女"
                        android:textColor="@color/black_deep"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_marginStart="68dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄"
                        android:textColor="@color/color_ADB5C1"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="39"
                        android:textColor="@color/black_deep"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/ll_gender_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号"
                        android:textColor="@color/color_ADB5C1"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_marginStart="4dp"
                        android:id="@+id/tv_id_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="39"
                        android:textColor="@color/black_deep"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_phone"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/ll_prpfile"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门诊信息"
                android:textColor="@color/color_0A1D3D"
                android:textSize="16sp"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/color_white"
                >
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门诊地点"
                    android:textColor="@color/color_ADB5C1"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="上海市黄浦区北京东路130号"
                    android:hint="请输入就诊地点"
                    android:textColor="@color/color_0A1D3D"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_marginTop="8dp"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门诊时间"
                    android:textColor="@color/color_ADB5C1"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_process_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请选择就诊时间"
                    android:textColor="@color/color_0A1D3D"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:gravity="end"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/rl_record"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_white"
                >
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延期记录"
                    android:textColor="@color/color_ADB5C1"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="16dp"/>
            </FrameLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/round_button_style_1"
            android:layout_height="wrap_content"
            android:text="同意"/>
        <Button
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            style="@style/round_button_style_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="延期"
            android:layout_weight="1"/>
        <Button
            android:text="取消"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            style="@style/round_button_style_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>