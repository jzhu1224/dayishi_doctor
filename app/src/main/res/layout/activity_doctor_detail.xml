<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="-1dp"
                android:background="@drawable/bg_my_account"
                android:layout_width="match_parent"
                android:layout_height="216dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="68dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img_doctor"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/color_white"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沈月"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/tv_doctor_info"
                    android:layout_below="@id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海第九人民医院\n小儿呼吸科 主治医师"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长疾病"
                android:textColor="@color/color_0A1D3D"
                android:textSize="16sp"
                />
            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/fl_good_at"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_good_at"
                    android:text="小儿呼吸-哮喘"
                    android:textColor="@color/color_ADB5C1"
                    android:textSize="14sp"/>
            </com.nex3z.flowlayout.FlowLayout>

            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_ededf0"
                />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人简介"
                android:textColor="@color/color_0A1D3D"
                android:textSize="16sp"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="2008年中山大学毕业后一直于上海第九人民医院从事儿科，目前专业方向时小儿呼吸科，怼各种儿科常见病也有丰富经验。目前专业方向时小儿呼吸科，怼各种儿科常见病也有丰富经验。目前专业方向时小儿呼吸科，怼各种儿科常见病也有丰富经验。"
                android:textColor="@color/color_ADB5C1"
                android:textSize="14sp"
                />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_add"
            android:layout_margin="18dp"
            android:text="加为好友"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/round_button_style_2"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/toolbar"
            app:qmui_topbar_title_color="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</RelativeLayout>

